<div class="body">
  <%= render 'shared/logo' %>
  
  <div class="l-container">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.text_field :username, autofocus: true, placeholder: "ユーザー名" %>
      </div>

      <div class="field">
        <%= f.password_field :password, placeholder: "パスワード（英数字6文字以上）" %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録" %>
      </div>
    <% end %>
  </div>
</div>
<%= render "devise/shared/links" %>
